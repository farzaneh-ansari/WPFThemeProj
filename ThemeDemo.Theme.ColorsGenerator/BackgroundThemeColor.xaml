<UserControl x:Class="ThemeDemo.Theme.ColorsGenerator.BackgroundThemeColor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThemeDemo.Theme.ColorsGenerator"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ThemeDemo.Theme.ColorsGenerator;component/ResourceDictionary/DefaultColorTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <!--<Grid Background="{x:Static local:IpipeColors.ProgressGradientBrush}">-->
    <Grid Background="{StaticResource ApplicationForegroundBrush }">

    </Grid>
</UserControl>
