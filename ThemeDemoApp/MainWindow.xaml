<Window x:Class="ThemeDemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"       
        xmlns:local="clr-namespace:ThemeDemoApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">   
    <Grid>
        <Menu >
            <Button Content="Login" Click="Login_Click"/>
            <Button Content="Contact" Click="Contact_Click"/>
            <Button Content="CustomControls" Click="CustomControls_Click"/>
        </Menu>
        <DockPanel>
            <Frame x:Name="_NavigationFrame" NavigationUIVisibility="Hidden" Height="311" />
        </DockPanel>        
    </Grid>
</Window>